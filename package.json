{
  "name": "folder-hub-jw",
  "version": "1.0.0",
  "description": "folder-hub-jw",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "deploy:win64": "electron-builder --win nsis:x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^24.3.1",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "productName": "FolderHubJW",
    "appId": "net.jetalab.ex.startelectron",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "FolderHubJW"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    },
    "extraResources": [
      "./data"
    ]
  }
}
